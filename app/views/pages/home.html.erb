<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RoomMate</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              black: "#000000",
              white: "#ffffff",
              gray: {
                50: "#fafafa",
                100: "#f5f5f5",
                200: "#e5e5e5",
                300: "#d4d4d4",
                400: "#a3a3a3",
                500: "#737373",
                600: "#525252",
                700: "#404040",
                800: "#262626",
                900: "#171717",
                950: "#0a0a0a"
              }
            },
            fontFamily: {
              syne: ['Syne', 'sans-serif']
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: 0, transform: "translateY(20px)" },
                "100%": { opacity: 1, transform: "translateY(0)" }
              },
              slideIn: {
                "0%": { opacity: 0, transform: "translateX(-20px)" },
                "100%": { opacity: 1, transform: "translateX(0)" }
              },
              pulse: {
                "0%, 100%": { opacity: 1 },
                "50%": { opacity: 0.5 }
              },
              float: {
                "0%, 100%": { transform: "translateY(0px)" },
                "50%": { transform: "translateY(-10px)" }
              }
            },
            animation: {
              fadeIn: "fadeIn 0.8s ease-out forwards",
              slideIn: "slideIn 0.6s ease-out forwards",
              pulse: "pulse 2s ease-in-out infinite",
              float: "float 6s ease-in-out infinite"
            }
          }
        }
      };
    </script>
    <style>
      .stagger-1 { animation-delay: 0.1s; }
      .stagger-2 { animation-delay: 0.2s; }
      .stagger-3 { animation-delay: 0.3s; }
      .stagger-4 { animation-delay: 0.4s; }
      .stagger-5 { animation-delay: 0.5s; }
      
      .gradient-text {
        background: linear-gradient(135deg, #fff 0%, #a3a3a3 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.08);
      }
      
      .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      }
      
      /* Scrollbar styling */
      ::-webkit-scrollbar {
        width: 6px;
      }
      ::-webkit-scrollbar-track {
        background: #171717;
      }
      ::-webkit-scrollbar-thumb {
        background: #404040;
        border-radius: 3px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #525252;
      }
    </style>
  </head>
  <body class="min-h-screen bg-black text-white font-syne antialiased">
    <!-- Subtle grid background -->
    <div class="fixed inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    
    <!-- Gradient orbs -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/[0.02] rounded-full blur-3xl animate-float"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-white/[0.015] rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
    </div>

    <div class="relative z-10">
      <% debug = @debug_info || {} %>
      
      <!-- Top bar -->
      <nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl bg-black">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
          <div class="flex items-center">
            <span class="text-lg font-semibold tracking-tight transition-transform duration-200 hover:scale-110 inline-block">Room<span class="text-[#FFFC00]">Mate</span></span>
      </div>

          <div class="flex items-center gap-4">
            <a href="/auth/register" class="hidden md:block px-5 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200">
              Sign Up
            </a>
            <a href="/auth/login" class="px-5 py-2 text-sm font-medium rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-200">
              Sign in
            </a>
          </div>
      </div>
      </nav>

      <!-- Hero Section -->
      <main class="pt-32 pb-20 px-6">
        <div class="max-w-7xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Left Content -->
            <div class="space-y-8 opacity-0 animate-fadeIn">
              <!-- Main heading -->
              <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-[1.1] stagger-2">
                <span class="opacity-60">Find your perfect</span>
                <span class="text-white"> Room</span><span class="text-[#FFFC00]">Mate</span>
            </h1>
              
              <!-- Subheading -->
              <p class="text-xl md:text-2xl text-gray-400 leading-relaxed stagger-3">
                We're building the smartest way to match roommates. Explore listings, create profiles, and discover verified spaces.
            </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-wrap gap-4 pt-4 stagger-4">
                <a href="/listings/search" class="px-8 py-4 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-100 transition-all duration-200">
                  View Listings
                </a>
                <a href="https://github.com/NYU-CSE-Software-Engineering/cs-uy-4513-f25-team5" target="_blank" class="px-8 py-4 text-base font-semibold rounded-full border border-white/20 text-white hover:bg-white/5 transition-all duration-200 flex items-center gap-2">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View on GitHub
                  </a>
                </div>
              </div>

            <!-- Right Image -->
            <div class="opacity-0 animate-fadeIn stagger-5">
                  <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-l from-transparent via-transparent to-black/50 z-10 rounded-3xl"></div>
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/30 z-10 rounded-3xl"></div>
                <img 
                  src="https://images.unsplash.com/photo-1529156069898-49953e39b3ac?w=800&q=80" 
                  alt="Friends enjoying time together" 
                  class="w-full h-[400px] lg:h-[550px] object-cover rounded-3xl border border-white/10"
                />
              </div>
            </div>
          </div>

          <!-- Stats Section -->
          <div class="mt-24 grid grid-cols-2 md:grid-cols-4 gap-6 opacity-0 animate-fadeIn stagger-5">
            <div class="glass-card rounded-2xl p-6 text-center hover-lift">
              <div class="text-3xl md:text-4xl font-bold text-white">100+</div>
              <div class="text-sm text-gray-500 mt-1">Active Listings</div>
            </div>
            <div class="glass-card rounded-2xl p-6 text-center hover-lift">
              <div class="text-3xl md:text-4xl font-bold text-white">50+</div>
              <div class="text-sm text-gray-500 mt-1">Verified Users</div>
            </div>
            <div class="glass-card rounded-2xl p-6 text-center hover-lift">
              <div class="text-3xl md:text-4xl font-bold text-white">95%</div>
              <div class="text-sm text-gray-500 mt-1">Match Rate</div>
        </div>
            <div class="glass-card rounded-2xl p-6 text-center hover-lift">
              <div class="text-3xl md:text-4xl font-bold text-white">24/7</div>
              <div class="text-sm text-gray-500 mt-1">Support</div>
            </div>
          </div>

          <!-- Routes Section -->
          <div class="mt-24">
            <div class="glass-card rounded-3xl p-8 opacity-0 animate-fadeIn" style="animation-delay: 0.6s;">
              <div class="flex items-center justify-between mb-8">
                <div>
                  <h2 class="text-2xl font-bold text-white">API Routes</h2>
                  <p class="text-gray-500 mt-1">Live from the router</p>
                </div>
                <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 border border-white/10">
                  <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                  <span class="text-xs text-gray-400">Live</span>
                </div>
              </div>
              
              <div class="max-h-[500px] overflow-auto space-y-3 pr-2">
            <% @routes.each do |route| %>
              <% link = route[:link] %>
              <% placeholders = route[:placeholders] || [] %>
              <% is_get = route[:verb]&.include?("GET") %>
              <% clickable = is_get && (link.present? || placeholders.any?) %>
              <% tag_name = clickable ? :a : :div %>
                  <% attrs = { class: "block rounded-xl border border-white/5 bg-white/[0.02] p-4 transition-all duration-200 #{clickable ? 'hover:bg-white/[0.05] hover:border-white/10 cursor-pointer' : ''}" } %>
              <% attrs[:href] = link.presence || route[:path] if clickable %>
              <% attrs[:data] = { turbo: false } if clickable %>
              <% if placeholders.any? %>
                <% attrs[:data] ||= {} %>
                <% attrs[:data].merge!(route_template: route[:path], route_placeholders: placeholders.join(",")) %>
              <% end %>

              <%= content_tag(tag_name, **attrs) do %>
                    <div class="flex flex-wrap items-center gap-3">
                      <span class="px-2.5 py-1 text-xs font-mono font-semibold rounded-md 
                        <%= route[:verb]&.include?('GET') ? 'bg-emerald-500/10 text-emerald-400' : '' %>
                        <%= route[:verb]&.include?('POST') ? 'bg-blue-500/10 text-blue-400' : '' %>
                        <%= route[:verb]&.include?('PUT') || route[:verb]&.include?('PATCH') ? 'bg-amber-500/10 text-amber-400' : '' %>
                        <%= route[:verb]&.include?('DELETE') ? 'bg-red-500/10 text-red-400' : '' %>
                      "><%= route[:verb] %></span>
                      <span class="font-mono text-sm text-white"><%= route[:path] %></span>
                  <% if route[:name].present? %>
                        <span class="text-xs text-gray-600">(<%= route[:name] %>)</span>
                  <% end %>
                </div>
                    <div class="mt-2 text-sm text-gray-500">
                      <span class="text-gray-400"><%= route[:controller] %></span>
                      <span class="text-gray-600">#</span>
                      <span class="text-gray-500"><%= route[:action] %></span>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

          <!-- Footer -->
          <footer class="shrink-0 mt-auto pt-4 pb-4 bg-black">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-600">
              <div class="flex items-center gap-2">
                <div class="w-6 h-6 rounded bg-white flex items-center justify-center">
                  <span class="text-black font-bold text-xs">R</span>
                </div>
                <span>RoomMate Â© 2025</span>
              </div>
              <div class="flex items-center gap-6">
                <a href="https://github.com/NYU-CSE-Software-Engineering/cs-uy-4513-f25-team5" target="_blank" class="hover:text-white transition-colors">GitHub</a>
                <a href="https://github.com/NYU-CSE-Software-Engineering/cs-uy-4513-f25-team5/actions/workflows/ci.yml" target="_blank" class="hover:text-white transition-colors flex items-center gap-2">
                  <span class="w-2 h-2 rounded-full bg-green-500"></span>
                  CI Status
                </a>
              </div>
            </div>
          </footer>
        </div>
      </main>
    </div>

      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const cards = document.querySelectorAll("[data-route-template]");
          cards.forEach((card) => {
            card.addEventListener("click", (event) => {
              const template = card.dataset.routeTemplate;
              const placeholders = (card.dataset.routePlaceholders || "").split(",").filter(Boolean);
              if (!template || placeholders.length === 0) return;

              event.preventDefault();
              let path = template;

              for (const placeholder of placeholders) {
                const value = window.prompt(`Enter value for ${placeholder}:`);
                if (value === null) return;
                const safe = encodeURIComponent(value);
                const pattern = new RegExp(`[:*]${placeholder}`, "g");
                path = path.replace(pattern, safe);
              }

              window.location.href = path;
            });
          });
        });
      </script>
  </body>
</html>
