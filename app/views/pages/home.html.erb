<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RoomMate Â· Find Your Perfect Roommate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              outfit: ['Outfit', 'sans-serif']
            }
          }
        }
      };
    </script>
    <style>
      .card {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .card:hover {
        transform: translateY(-8px) scale(1.02);
        border-color: rgba(255, 255, 255, 0.6);
        background: rgba(0, 0, 0, 0.9);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.1);
      }
      .btn-pop {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .btn-pop:hover {
        transform: scale(1.05);
      }
      .btn-pop:active {
        transform: scale(0.98);
      }
    </style>
  </head>
  <body class="min-h-screen bg-black font-outfit text-white">
    <div class="relative">
      <!-- Navigation -->
      <nav style="background-color: oklch(26.9% 0 0);">
        <div class="max-w-7xl mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="text-2xl font-bold text-white">Room<span class="text-[#FFFC00]">Mate</span></a>
            <div class="flex items-center gap-4">
              <% debug = @debug_info || {} %>
              <% if debug[:logged_in] %>
                <span class="text-white/60 text-sm hidden sm:block">
                  <%= debug[:user_email].presence || "Logged in" %>
                </span>
                <a href="/dashboard" class="btn-pop px-4 py-2 rounded-lg border border-white/10 text-white hover:bg-white/5 text-sm">
                  Dashboard
                </a>
              <% else %>
                <a href="/auth/login" class="btn-pop px-4 py-2 rounded-lg border border-white/10 text-white hover:bg-white/5 text-sm">
                  Sign in
                </a>
                <a href="/auth/register" class="btn-pop px-4 py-2 rounded-lg bg-white text-black hover:bg-white/90 text-sm font-medium">
                  Sign up
                </a>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <section class="max-w-7xl mx-auto px-6 py-24">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="text-6xl font-bold text-white mb-6 leading-tight">
              Find your perfect<br />Room<span class="text-[#FFFC00]">Mate</span>
            </h1>
            <p class="text-xl text-white/60 mb-8 leading-relaxed">
              Connect with compatible roommates based on lifestyle, budget, and preferences. 
              Start your journey to finding the ideal living situation.
            </p>
            <div class="flex flex-wrap gap-4">
              <% if debug[:logged_in] %>
                <a href="/dashboard" class="btn-pop px-6 py-3 rounded-lg bg-white text-black hover:bg-white/90 font-medium">
                  Go to Dashboard
                </a>
              <% else %>
                <a href="/auth/register" class="btn-pop px-6 py-3 rounded-lg bg-white text-black hover:bg-white/90 font-medium">
                  Get Started
                </a>
                <a href="/auth/login" class="btn-pop px-6 py-3 rounded-lg border border-white/10 text-white hover:bg-white/5">
                  Sign in
                </a>
              <% end %>
            </div>
          </div>
          <div>
            <div class="rounded-2xl overflow-hidden border-2 border-white/30">
              <img 
                src="https://images.unsplash.com/photo-1529156069898-49953e39b3ac?w=800&h=600&fit=crop&q=80" 
                alt="Friends and roommates connecting" 
                class="w-full h-auto object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="max-w-7xl mx-auto px-6 py-24">
        <h2 class="text-3xl font-bold text-white mb-12">Features</h2>
        <div class="grid gap-6 md:grid-cols-3">
          <div class="card rounded-2xl p-8 flex flex-col h-full text-center">
            <div class="flex-1">
              <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center mb-6 mx-auto">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Smart Matching</h3>
              <p class="text-white/60 text-sm leading-relaxed">Find compatible roommates based on lifestyle, budget, and preferences</p>
            </div>
          </div>

          <div class="card rounded-2xl p-8 flex flex-col h-full text-center">
            <div class="flex-1">
              <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center mb-6 mx-auto">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Browse Listings</h3>
              <p class="text-white/60 text-sm leading-relaxed">Explore available rooms and apartments in your desired area</p>
            </div>
          </div>

          <div class="card rounded-2xl p-8 flex flex-col h-full text-center">
            <div class="flex-1">
              <div class="w-14 h-14 rounded-xl bg-white/10 flex items-center justify-center mb-6 mx-auto">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Verified Listings</h3>
              <p class="text-white/60 text-sm leading-relaxed">Trust verified properties reviewed by community verifiers</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Routes Section (for development) -->
      <% if @routes.present? %>
        <section class="max-w-7xl mx-auto px-6 py-24">
          <div class="card rounded-2xl p-6">
            <div class="mb-6 flex items-center justify-between">
              <div>
                <h2 class="text-lg font-semibold text-white mb-1">All Routes</h2>
                <p class="text-xs uppercase tracking-wider text-white/40">Live from router</p>
              </div>
            </div>
            <div class="max-h-96 space-y-2 overflow-auto">
              <% @routes.each do |route| %>
                <% link = route[:link] %>
                <% placeholders = route[:placeholders] || [] %>
                <% is_get = route[:verb]&.include?("GET") %>
                <% clickable = is_get && (link.present? || placeholders.any?) %>
                <% base_classes = "grid grid-cols-1 gap-2 rounded-lg border border-white/10 bg-black px-4 py-3 text-sm text-white/80 md:grid-cols-[80px_1fr_1fr]" %>
                <% interactive_classes = clickable ? " transition hover:border-white/20 hover:bg-white/5 cursor-pointer" : "" %>
                <% tag_name = clickable ? :a : :div %>
                <% attrs = { class: "#{base_classes}#{interactive_classes}" } %>
                <% attrs[:href] = link.presence || route[:path] if clickable %>
                <% attrs[:data] = { turbo: false } if clickable %>
                <% if placeholders.any? %>
                  <% attrs[:data] ||= {} %>
                  <% attrs[:data].merge!(route_template: route[:path], route_placeholders: placeholders.join(",")) %>
                <% end %>

                <%= content_tag(tag_name, **attrs) do %>
                  <div class="flex items-center gap-2">
                    <span class="rounded-full bg-white/10 px-2 py-1 text-[11px] font-semibold text-white"><%= route[:verb] %></span>
                    <% if route[:name].present? %>
                      <span class="text-[11px] uppercase tracking-wide text-white/50"><%= route[:name] %></span>
                    <% end %>
                  </div>
                  <div class="text-white font-semibold break-all"><%= route[:path] %></div>
                  <div class="text-white/70">
                    <span class="font-semibold text-white/90"><%= route[:controller] %></span>
                    <span class="text-white/50">#</span>
                    <span class="text-white/80"><%= route[:action] %></span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </section>
      <% end %>

      <!-- Footer -->
      <footer class="border-t border-white/10 mt-24">
        <div class="max-w-7xl mx-auto px-6 py-12">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-white/40 text-sm">
              RoomMate - Find your perfect roommate match
            </p>
            <div class="flex items-center gap-4">
              <a href="https://github.com/NYU-CSE-Software-Engineering/cs-uy-4513-f25-team5" target="_blank" rel="noreferrer" class="text-white/60 hover:text-white transition-colors text-sm">
                GitHub
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const cards = document.querySelectorAll("[data-route-template]");
        cards.forEach((card) => {
          card.addEventListener("click", (event) => {
            const template = card.dataset.routeTemplate;
            const placeholders = (card.dataset.routePlaceholders || "").split(",").filter(Boolean);
            if (!template || placeholders.length === 0) return;

            event.preventDefault();
            let path = template;

            for (const placeholder of placeholders) {
              const value = window.prompt(`Enter value for ${placeholder}:`);
              if (value === null) return;
              const safe = encodeURIComponent(value);
              const pattern = new RegExp(`[:*]${placeholder}`, "g");
              path = path.replace(pattern, safe);
            }

            window.location.href = path;
          });
        });
      });
    </script>
  </body>
</html>
