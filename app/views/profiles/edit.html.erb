<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile · RoomMate</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              black: "#000000",
              white: "#ffffff",
              gray: {
                50: "#fafafa",
                100: "#f5f5f5",
                200: "#e5e5e5",
                300: "#d4d4d4",
                400: "#a3a3a3",
                500: "#737373",
                600: "#525252",
                700: "#404040",
                800: "#262626",
                900: "#171717",
                950: "#0a0a0a"
              }
            },
            fontFamily: {
              syne: ['Syne', 'sans-serif']
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: 0, transform: "translateY(20px)" },
                "100%": { opacity: 1, transform: "translateY(0)" }
              }
            },
            animation: {
              fadeIn: "fadeIn 0.6s ease-out forwards"
            }
          }
        }
      };
    </script>
    <style>
      .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.08);
      }
      
      input:-webkit-autofill,
      input:-webkit-autofill:hover,
      input:-webkit-autofill:focus,
      textarea:-webkit-autofill {
        -webkit-text-fill-color: #fff;
        -webkit-box-shadow: 0 0 0px 1000px #171717 inset;
        transition: background-color 5000s ease-in-out 0s;
      }
    </style>
  </head>
  <body class="min-h-screen bg-black text-white font-syne antialiased">
    <!-- Subtle grid background -->
    <div class="fixed inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    
    <!-- Gradient orbs -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/[0.02] rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-white/[0.015] rounded-full blur-3xl"></div>
    </div>

    <div class="relative z-10 min-h-screen flex flex-col">
      <!-- Main Content -->
      <main class="flex-1 py-12 px-6 flex items-center">
        <div class="max-w-5xl mx-auto w-full">
          <!-- Header -->
          <div class="mb-8 opacity-0 animate-fadeIn flex items-center gap-4">
            <a href="/profile" class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center text-white hover:bg-white/5 transition-colors duration-200">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </a>
            <h1 class="text-3xl md:text-4xl font-bold tracking-tight">Edit Profile</h1>
          </div>

          <% if @user.errors.any? %>
            <div class="mb-6 px-4 py-3 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 opacity-0 animate-fadeIn">
              <p class="font-semibold mb-2">There were problems saving your profile:</p>
              <ul class="list-disc list-inside text-sm space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @user, url: profile_path, method: :patch, local: true, html: { multipart: true } do |form| %>
            <!-- Two Column Layout -->
            <div class="grid lg:grid-cols-[280px_1fr] gap-8">
              
              <!-- Left: Avatar Section -->
              <div class="rounded-2xl p-6 opacity-0 animate-fadeIn flex flex-col items-center justify-center text-center h-full bg-white/[0.08] backdrop-blur-sm border border-white/[0.08]" style="animation-delay: 0.1s;">
                <div class="mb-4">
                  <% if @user.avatar.present? %>
                    <img src="<%= @user.avatar.data_uri %>" alt="Profile picture" 
                         class="w-32 h-32 rounded-full object-cover border-2 border-white/10" />
                  <% else %>
                    <div class="w-32 h-32 rounded-full bg-white/5 border-2 border-white/10 flex items-center justify-center" data-testid="profile-picture-placeholder">
                      <svg class="w-12 h-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex flex-col items-center gap-2">
                  <!-- Change button with edit icon -->
                  <label for="user_avatar" class="px-4 py-2 rounded-full bg-white flex items-center gap-2 cursor-pointer hover:bg-gray-200 transition-colors duration-200" title="Upload photo">
                    <svg class="w-4 h-4 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    <span class="text-sm font-medium text-black">Change</span>
                  </label>
                  <%= form.label :avatar, 'Avatar', for: 'user_avatar', class: "sr-only" %>
                  <%= form.file_field :avatar, accept: 'image/*', id: "user_avatar", class: "absolute opacity-0 w-px h-px" %>
                  
                  <!-- Remove button with delete icon -->
                  <% if @user.avatar.present? %>
                    <%= button_to profile_path, method: :patch, 
                        params: { remove_avatar: '1' },
                        form: { data: { turbo: false } },
                        class: "px-4 py-2 rounded-full flex items-center gap-2 hover:opacity-80 transition-opacity duration-200",
                        style: "background-color: oklch(75% 0.183 55.934);",
                        title: "Remove photo" do %>
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      <span class="text-sm font-medium text-white">Remove Profile Picture</span>
                    <% end %>
                  <% end %>
                </div>
              </div>

              <!-- Right: Form Fields -->
              <div class="glass-card rounded-2xl p-6 opacity-0 animate-fadeIn space-y-6" style="animation-delay: 0.15s;">
                <!-- Row 1 -->
                <div class="grid md:grid-cols-2 gap-5">
                  <div>
                    <%= form.label :display_name, 'Display name', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :display_name, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "Your display name" %>
                  </div>

                  <div>
                    <%= form.label :budget, 'Budget ($)', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.number_field :budget, min: 0, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "1500" %>
                  </div>
                </div>

                <!-- Row 2 -->
                <div class="grid md:grid-cols-2 gap-5">
                  <div>
                    <%= form.label :preferred_location, 'Preferred location', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :preferred_location, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "e.g. Manhattan, Brooklyn" %>
                  </div>

                  <div>
                    <%= form.label :sleep_schedule, 'Sleep schedule', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :sleep_schedule, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "e.g. Early bird, Night owl" %>
                  </div>
                </div>

                <!-- Row 3 -->
                <div class="grid md:grid-cols-3 gap-5">
                  <div>
                    <%= form.label :pets, 'Pets', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :pets, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "e.g. Cat, Dog, None" %>
                  </div>

                  <div>
                    <%= form.label :housing_status, 'Housing status', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :housing_status, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "e.g. Looking for room" %>
                  </div>

                  <div>
                    <%= form.label :contact_visibility, 'Contact visibility', class: "block text-sm font-medium text-gray-300 mb-2" %>
                    <%= form.text_field :contact_visibility, 
                        class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
                        placeholder: "e.g. Public, Private" %>
                  </div>
                </div>

                <!-- Bio -->
                <div>
                  <%= form.label :bio, 'Bio', class: "block text-sm font-medium text-gray-300 mb-2" %>
                  <%= form.text_area :bio, rows: 3,
                      class: "w-full px-4 py-3 rounded-xl bg-white/10 border-0 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200 resize-none",
                      placeholder: "Tell others about yourself..." %>
                </div>

                <!-- Save Button -->
                <div>
                  <%= form.submit 'Save Profile', 
                      class: "w-full px-6 py-3 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200 cursor-pointer" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </main>

      <!-- Footer -->
      <footer class="shrink-0 py-4 px-6 bg-black">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-600">
          <span>Room<span class="text-[#FFFC00]">Mate</span> © 2025</span>
          <div class="flex items-center gap-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <a href="/listings" class="hover:text-white transition-colors">Listings</a>
            <a href="https://github.com/NYU-CSE-Software-Engineering/cs-uy-4513-f25-team5" target="_blank" class="hover:text-white transition-colors">GitHub</a>
          </div>
        </div>
      </footer>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const avatarInput = document.querySelector('#user_avatar');

        if (!avatarInput) return;

        avatarInput.addEventListener('change', event => {
          const [file] = event.target.files || [];

          if (!file || !file.type.startsWith('image/')) return;

          const reader = new FileReader();
          const image = new Image();

          reader.onload = loadEvent => {
            image.onload = () => {
              const canvas = document.createElement('canvas');
              canvas.width = 128;
              canvas.height = 128;
              const ctx = canvas.getContext('2d');
              ctx.clearRect(0, 0, 128, 128);

              const scale = Math.min(128 / image.width, 128 / image.height);
              const width = image.width * scale;
              const height = image.height * scale;
              const offsetX = (128 - width) / 2;
              const offsetY = (128 - height) / 2;

              ctx.drawImage(image, offsetX, offsetY, width, height);

              canvas.toBlob(blob => {
                if (!blob) return;

                const resizedFile = new File([blob], file.name.replace(/\.\w+$/, '.png'), {
                  type: 'image/png',
                  lastModified: Date.now()
                });

                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(resizedFile);
                avatarInput.files = dataTransfer.files;
              }, 'image/png');
            };

            image.src = loadEvent.target.result;
          };

          reader.readAsDataURL(file);
        });
      });
    </script>
  </body>
</html>
