
<div class="bg-white shadow p-6 rounded-lg max-w-3xl mx-auto space-y-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">New Listing</h1>
  <%= form_with(model: @listing, local: true, class: "space-y-6") do |form| %>
    <% if @listing.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <h2 class="font-semibold mb-2"><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @listing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-col">
      <%= form.label :title, class: "mb-1 font-semibold text-gray-700" %>
      <%= form.text_field :title, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :description, class: "mb-1 font-semibold text-gray-700" %>
      <%= form.text_area :description, rows: 5, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :price, class: "mb-1 font-semibold text-gray-700" %>
      <%= form.number_field :price, step: 0.01, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :city, class: "mb-1 font-semibold text-gray-700" %>
      <%= form.text_field :city, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :owner_email, "Contact Email", class: "mb-1 font-semibold text-gray-700" %>
      <%= form.email_field :owner_email, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col gap-2">
      <%= form.submit "Create Listing", class: "w-full px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition" %>
      <%= link_to 'Back', listings_path, class: "w-full sm:w-auto px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 text-center" %>
    </div>
  <% end %>
</div>