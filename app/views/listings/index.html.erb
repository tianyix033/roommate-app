<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Browse Listings Â· RoomMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              outfit: ['Outfit', 'sans-serif']
            }
          }
        }
      };
    </script>
    <style>
      .card {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .card:hover {
        transform: translateY(-8px) scale(1.02);
        border-color: rgba(255, 255, 255, 0.6);
        background: rgba(0, 0, 0, 0.9);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.1);
      }
      .btn-pop {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .btn-pop:hover {
        transform: scale(1.05);
      }
      .btn-pop:active {
        transform: scale(0.98);
      }
      .fade-in {
        animation: fadeIn 0.6s ease-in-out;
      }
      .fade-in-delay-1 {
        animation: fadeIn 0.6s ease-in-out 0.1s both;
      }
      .fade-in-delay-2 {
        animation: fadeIn 0.6s ease-in-out 0.2s both;
      }
      .fade-in-delay-3 {
        animation: fadeIn 0.6s ease-in-out 0.3s both;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body class="min-h-screen bg-black font-outfit text-white">
    <!-- Navigation -->
    <nav style="background-color: oklch(26.9% 0 0);">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-white">Room<span class="text-[#FFFC00]">Mate</span></a>
          <div class="flex items-center gap-4">
            <a href="/dashboard" class="text-white/60 hover:text-white transition-colors text-sm">Dashboard</a>
            <%= button_to auth_logout_path, method: :post, class: "btn-pop flex items-center gap-2 px-4 py-2 rounded-lg bg-white text-black hover:bg-white/90 text-sm cursor-pointer font-medium" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              <span>Log out</span>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="max-w-7xl mx-auto px-6 py-12">
      <!-- Header -->
      <div class="mb-8 fade-in">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h1 class="text-4xl font-bold text-white mb-2">Browse Listings</h1>
            <p class="text-white/60 text-lg">Explore available rooms and apartments</p>
          </div>
          <%= link_to "Create New Listing", new_listing_path, class: "btn-pop px-6 py-3 rounded-lg bg-white text-black hover:bg-white/90 font-medium" %>
        </div>
      </div>

      <!-- Flash Messages -->
      <% if notice.present? %>
        <div class="mb-8 flex items-center gap-3 rounded-xl bg-white/10 border border-white/20 px-5 py-4 text-sm text-white fade-in">
          <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="mb-8 flex items-center gap-3 rounded-xl bg-white/10 border border-white/20 px-5 py-4 text-sm text-white fade-in">
          <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <!-- Listings Grid -->
      <% if @listings.any? %>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% @listings.each_with_index do |listing, index| %>
            <% delay_class = case index % 3
                when 0 then "fade-in-delay-1"
                when 1 then "fade-in-delay-2"
                else "fade-in-delay-3"
              end %>
            <div class="card rounded-2xl p-6 <%= delay_class %>">
              <div class="mb-4">
                <% if listing.verified %>
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-[#FFFC00]/20 border border-[#FFFC00]/30 text-[#FFFC00] text-xs font-semibold mb-3">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Verified
                  </span>
                <% end %>
                <h3 class="text-xl font-bold text-white mb-2">
                  <%= link_to listing.title, listing_path(listing), class: "hover:text-[#FFFC00] transition-colors" %>
                </h3>
              </div>

              <div class="space-y-3 mb-6">
                <div class="flex items-center gap-2 text-white">
                  <svg class="w-5 h-5 text-[#FFFC00]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="text-2xl font-bold">$<%= number_with_precision(listing.price, precision: 0) %></span>
                  <span class="text-white/60 text-sm">/month</span>
                </div>
                <% if listing.city.present? %>
                  <div class="flex items-center gap-2 text-white/60 text-sm">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span><%= listing.city %></span>
                  </div>
                <% end %>
                <% if listing.status.present? %>
                  <div class="flex items-center gap-2 text-white/60 text-sm">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="capitalize"><%= listing.status %></span>
                  </div>
                <% end %>
              </div>

              <div class="flex gap-3">
                <%= link_to "View", listing_path(listing), class: "btn-pop flex-1 text-center px-4 py-2 rounded-lg border border-white/10 text-white hover:bg-white/5 text-sm" %>
                <% if listing.user_id == current_user&.id %>
                  <%= link_to "Edit", edit_listing_path(listing), class: "btn-pop px-4 py-2 rounded-lg border border-white/10 text-white hover:bg-white/5 text-sm" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card rounded-2xl p-12 text-center fade-in-delay-1">
          <div class="w-16 h-16 rounded-full bg-white/10 flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white mb-4">No listings found</h2>
          <p class="text-white/60 mb-6">Be the first to create a listing!</p>
          <%= link_to "Create New Listing", new_listing_path, class: "btn-pop inline-block px-6 py-3 rounded-lg bg-white text-black hover:bg-white/90 font-medium" %>
        </div>
      <% end %>
    </div>
  </body>
</html>
