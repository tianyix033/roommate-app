<% content_for :title, @is_my_listings ? "My Listings" : "Browse Listings" %>
<% content_for :body_class, "h-screen bg-black text-white font-syne antialiased overflow-hidden" %>
<% content_for :container_class, "h-screen flex flex-col" %>
<% content_for :main_class, "flex-1 pt-24 pb-4 px-6 overflow-y-auto" %>
<% content_for :content_class, "max-w-6xl mx-auto" %>

<!-- Header -->
<div class="mb-10 opacity-0 animate-fadeIn">
  <div class="flex items-start justify-between gap-4">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4"><%= @is_my_listings ? "My Listings" : "Browse Listings" %></h1>
      <p class="text-xl text-gray-400"><%= @is_my_listings ? "Manage your listings" : "Find your perfect space with filters" %></p>
    </div>
    <% if @is_my_listings %>
      <%= link_to new_listing_path, class: "px-6 py-3 text-base font-semibold rounded-full bg-[#FFFC00] text-black hover:bg-[#E6E300] transition-all duration-200 inline-flex items-center gap-2 whitespace-nowrap" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Create New Listing
      <% end %>
    <% end %>
  </div>
</div>

<!-- Search Form (only show when browsing, not on "My Listings") -->
<% unless @is_my_listings %>
<div class="glass-card rounded-2xl p-8 mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.1s;">
  <%= form_with url: listings_path, method: :get, local: true, class: "space-y-6" do %>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div>
        <%= label_tag :city, 'City', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :city, @filters&.dig(:city), 
            placeholder: 'e.g., New York', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :min_price, 'Min Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :min_price, @filters&.dig(:min_price), 
            min: 0, 
            placeholder: '0',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :max_price, 'Max Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :max_price, @filters&.dig(:max_price), 
            min: 0, 
            placeholder: '5000',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :keywords, 'Keywords', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :keywords, @filters&.dig(:keywords), 
            placeholder: 'e.g., furnished', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= submit_tag 'Search', class: "px-8 py-3 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>
<% end %>

<!-- Results -->
<div class="opacity-0 animate-fadeIn" style="animation-delay: 0.2s;">
  <% if @listings.present? && @listings.any? %>
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Results</h2>
      <span class="text-gray-400"><%= @listings.count %> listing<%= @listings.count == 1 ? '' : 's' %> found</span>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each_with_index do |listing, index| %>
        <div class="glass-card rounded-2xl overflow-hidden hover-lift" style="animation-delay: <%= 0.3 + (index * 0.05) %>s;">
          <!-- Image -->
          <% if listing.primary_image.present? %>
            <a href="<%= listing_path(listing) %>" class="block w-full h-48 bg-gray-900 overflow-hidden">
              <%= image_tag url_for(listing.primary_image), alt: listing.title, class: "w-full h-full object-cover" %>
            </a>
          <% else %>
            <a href="<%= listing_path(listing) %>" class="block w-full h-48 bg-gray-900 flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </a>
          <% end %>

          <div class="p-6">
            <!-- Status Badge -->
            <div class="flex items-center justify-between mb-4">
              <% if listing.status == 'verified' %>
                <span class="w-6 h-6 rounded-full bg-blue-500 flex items-center justify-center" title="Verified">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </span>
              <% elsif listing.status == 'pending' %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
              <% elsif listing.status == 'rejected' %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-red-500/10 text-red-400 border border-red-500/20">Rejected</span>
              <% else %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
              <% end %>
              <span class="text-2xl font-bold text-white">$<%= number_with_precision(listing.price, precision: 0) %></span>
            </div>

            <!-- Title -->
            <a href="<%= listing_path(listing) %>" class="block">
              <h3 class="text-xl font-semibold text-white mb-2 line-clamp-1 hover:text-[#FFFC00] transition-colors"><%= listing.title %></h3>
            </a>
            
            <!-- Location -->
            <div class="flex items-center gap-2 text-gray-400 mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span><%= listing.city %></span>
            </div>

            <!-- Description preview -->
            <% if listing.description.present? %>
              <p class="text-gray-500 text-sm line-clamp-2 mb-4"><%= listing.description %></p>
            <% end %>

            <!-- Actions (only show on "My Listings" page) -->
            <% if @is_my_listings %>
              <div class="flex items-center gap-3 pt-4 border-t border-white/10">
                <%= link_to 'View', listing_path(listing), class: "flex-1 px-4 py-2 text-sm font-medium text-center rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-200" %>
                <%= link_to edit_listing_path(listing), class: "px-4 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200 inline-flex items-center gap-2" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Edit
                <% end %>
                <%= button_to listing_path(listing), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "w-10 h-10 text-sm font-medium rounded-full text-white hover:opacity-80 transition-opacity duration-200 inline-flex items-center justify-center", style: "background-color: oklch(75% 0.183 55.934);" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif @filters.present? && @filters.values.any?(&:present?) %>
    <!-- No results -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No listings found matching your search criteria</h3>
      <p class="text-gray-400">Try adjusting your search filters to find more results.</p>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No listings yet</h3>
      <p class="text-gray-400 mb-6">Be the first to create a listing and find your perfect roommate.</p>
      <%= link_to 'Create New Listing', new_listing_path, class: "inline-flex px-6 py-3 text-sm font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-200" %>
    </div>
  <% end %>
</div>

