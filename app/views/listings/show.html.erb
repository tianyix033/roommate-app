<p id="notice" class="text-green-600 mb-4"><%= notice %></p>

<div class="bg-white shadow p-6 rounded-lg max-w-3xl mx-auto space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-800"><%= @listing.title %></h1>
    <% if @listing.verified %>
      <span class="px-3 py-1 bg-green-100 text-green-800 font-semibold rounded-full text-sm">Verified</span>
    <% end %>
  </div>

  <div class="space-y-2 text-gray-700">
    <p><strong>Owner:</strong> <%= @listing.owner_email %></p>
    <p><strong>Status:</strong> <%= @listing.status %></p>
    <p><strong>Description:</strong> 
      <p>
      <%= @listing.description %>
      </p>
    </p>
    <p><strong>Price:</strong> $<%= number_with_precision(@listing.price, precision: 2) %></p>
    <p><strong>City:</strong> <%= @listing.city %></p>
  </div>

  
  <!-- Buttons stacked full width -->
  <div class="flex flex-col gap-2 mt-2">
    <%= link_to 'Edit', edit_listing_path(@listing), class: 'w-full px-4 py-2 bg-yellow-400 text-white rounded hover:bg-yellow-500 text-center' %>
    <%= link_to 'Back to All Listings', listings_path, class: 'w-full px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 text-center' %>
    <%= button_to 'Delete', listing_path(@listing), method: :delete, data: { confirm: 'Are you sure?' }, class: 'w-full px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 text-center' %>
    <% if @listing.verification_requested && !@listing.verified %>
      <%= button_to 'Mark as Verified', verify_listing_path(@listing), method: :patch, class: 'w-full px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 text-center' %>
    <% end %>
  </div>
</div>
