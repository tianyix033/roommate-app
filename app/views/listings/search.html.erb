<% content_for :title, "Search Listings" %>
<% content_for :body_class, "h-screen bg-black text-white font-syne antialiased overflow-hidden" %>
<% content_for :container_class, "h-screen flex flex-col" %>
<% content_for :main_class, "flex-1 pt-24 pb-4 px-6 overflow-y-auto" %>
<% content_for :content_class, "max-w-6xl mx-auto" %>

<!-- Header -->
<div class="mb-10 opacity-0 animate-fadeIn">
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Search Listings</h1>
  <p class="text-xl text-gray-400">Find your perfect space with filters</p>
</div>

<!-- Search Form -->
<div class="glass-card rounded-2xl p-8 mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.1s;">
  <%= form_with url: search_listings_path, method: :get, local: true, class: "space-y-6" do %>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div>
        <%= label_tag :city, 'City', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :city, @filters[:city], 
            placeholder: 'e.g., New York', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :min_price, 'Min Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :min_price, @filters[:min_price], 
            min: 0, 
            placeholder: '0',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :max_price, 'Max Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :max_price, @filters[:max_price], 
            min: 0, 
            placeholder: '5000',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :keywords, 'Keywords', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :keywords, @filters[:keywords], 
            placeholder: 'e.g., furnished', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= submit_tag 'Search', class: "px-8 py-3 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200 cursor-pointer" %>
    </div>
  <% end %>
    </div>

<!-- Results -->
<div class="opacity-0 animate-fadeIn" style="animation-delay: 0.2s;">
  <% if @listings.present? && @listings.any? %>
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Results</h2>
      <span class="text-gray-400"><%= @listings.count %> listing<%= @listings.count == 1 ? '' : 's' %> found</span>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each_with_index do |listing, index| %>
        <a href="<%= listing_path(listing) %>" class="glass-card rounded-2xl p-6 hover-lift block" style="animation-delay: <%= 0.3 + (index * 0.05) %>s;">
          <!-- Status Badge -->
          <div class="flex items-center justify-between mb-4">
            <% if listing.status == 'verified' %>
              <span class="w-6 h-6 rounded-full bg-blue-500 flex items-center justify-center" title="Verified">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </span>
            <% elsif listing.status == 'pending' %>
              <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
            <% elsif listing.status == 'rejected' %>
              <span class="px-3 py-1 text-xs font-semibold rounded-full bg-red-500/10 text-red-400 border border-red-500/20">Rejected</span>
            <% else %>
              <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
            <% end %>
            <span class="text-2xl font-bold text-white">$<%= number_with_precision(listing.price, precision: 0) %></span>
          </div>

          <!-- Title -->
          <h3 class="text-xl font-semibold text-white mb-2 line-clamp-1"><%= listing.title %></h3>
          
          <!-- Location -->
          <div class="flex items-center gap-2 text-gray-400 mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span><%= listing.city %></span>
          </div>

          <!-- Description preview -->
          <% if listing.description.present? %>
            <p class="text-gray-500 text-sm line-clamp-2"><%= listing.description %></p>
          <% end %>
        </a>
      <% end %>
    </div>
  <% elsif @filters.present? && @filters.values.any?(&:present?) %>
    <!-- No results -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No listings found matching your search criteria</h3>
      <p class="text-gray-400">Try adjusting your search filters to find more results.</p>
    </div>
  <% else %>
    <!-- Initial state -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">Start searching</h3>
      <p class="text-gray-400">Use the filters above to find your perfect listing.</p>
    </div>
  <% end %>
</div>
