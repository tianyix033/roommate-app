<h1>Match Details</h1>

<div class="match-details">
  <h2><%= @matched_user.display_name %></h2>
  
  <div class="compatibility-score">
    <p><strong>Compatibility:</strong> <%= @match.compatibility_score %>%</p>
  </div>
  
  <div class="profile-information">
    <h3>Profile Information</h3>
    <p><strong>Email:</strong> <%= @matched_user.email %></p>
    <% if @matched_user.display_name.present? %>
      <p><strong>Name:</strong> <%= @matched_user.display_name %></p>
    <% end %>
    <% if @matched_user.bio.present? %>
      <p><strong>Bio:</strong> <%= @matched_user.bio %></p>
    <% end %>
  </div>
  
  <div class="lifestyle-preferences">
    <h3>Lifestyle Preferences</h3>
    <% if @matched_user.preferred_location.present? %>
      <p><strong>Preferred Location:</strong> <%= @matched_user.preferred_location %></p>
    <% end %>
    <% if @matched_user.sleep_schedule.present? %>
      <p><strong>Sleep Schedule:</strong> <%= @matched_user.sleep_schedule %></p>
    <% end %>
    <% if @matched_user.pets.present? %>
      <p><strong>Pets:</strong> <%= @matched_user.pets %></p>
    <% end %>
    <% if @matched_user.budget.present? %>
      <p><strong>Budget:</strong> $<%= @matched_user.budget %></p>
    <% end %>
  </div>
  
  <div class="actions">
    <%= link_to "Back to Matches", matches_path, class: "btn btn-secondary" %>
    <%= button_to "Like", like_match_path(@match), method: :post, class: "btn btn-primary" %>
  </div>
</div>

