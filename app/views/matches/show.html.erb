<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Match Details Â· RoomMate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              outfit: ['Outfit', 'sans-serif']
            }
          }
        }
      };
    </script>
    <style>
      .card {
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.3);
      }
      .btn-pop {
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      }
      .btn-pop:hover {
        transform: scale(1.05);
      }
      .btn-pop:active {
        transform: scale(0.98);
      }
      .fade-in {
        animation: fadeIn 0.6s ease-in-out;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body class="min-h-screen bg-black font-outfit text-white">
    <!-- Navigation -->
    <nav style="background-color: oklch(26.9% 0 0);">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-white">Room<span class="text-[#FFFC00]">Mate</span></a>
          <div class="flex items-center gap-4">
            <a href="/matches" class="text-white/60 hover:text-white transition-colors text-sm">Back to Matches</a>
            <%= button_to auth_logout_path, method: :post, class: "btn-pop flex items-center gap-2 px-4 py-2 rounded-lg bg-white text-black hover:bg-white/90 text-sm cursor-pointer font-medium" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              <span>Log out</span>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <div class="max-w-4xl mx-auto px-6 py-12">
      <!-- Header -->
      <div class="mb-8 fade-in">
        <a href="/matches" class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors mb-6">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span>Back to Matches</span>
        </a>
        <h1 class="text-4xl font-bold text-white mb-4"><%= @matched_user.display_name || @matched_user.email %></h1>
        <div class="text-5xl font-bold text-[#FFFC00] mb-6">
          <%= @match.compatibility_score %>% Match
        </div>
      </div>

      <!-- Profile Information Card -->
      <div class="card rounded-2xl p-8 mb-6 fade-in">
        <h2 class="text-xl font-bold text-white mb-6">Profile Information</h2>
        <div class="space-y-4">
          <div>
            <span class="text-white/60 text-sm">Email</span>
            <p class="text-white"><%= @matched_user.email %></p>
          </div>
          <% if @matched_user.display_name.present? %>
            <div>
              <span class="text-white/60 text-sm">Name</span>
              <p class="text-white"><%= @matched_user.display_name %></p>
            </div>
          <% end %>
          <% if @matched_user.bio.present? %>
            <div>
              <span class="text-white/60 text-sm">Bio</span>
              <p class="text-white"><%= @matched_user.bio %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Lifestyle Preferences Card -->
      <div class="card rounded-2xl p-8 mb-6 fade-in">
        <h2 class="text-xl font-bold text-white mb-6">Lifestyle Preferences</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <% if @matched_user.preferred_location.present? %>
            <div>
              <div class="flex items-center gap-2 text-white/60 text-sm mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span>Location</span>
              </div>
              <p class="text-white"><%= @matched_user.preferred_location %></p>
            </div>
          <% end %>
          <% if @matched_user.budget.present? %>
            <div>
              <div class="flex items-center gap-2 text-white/60 text-sm mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Budget</span>
              </div>
              <p class="text-white">$<%= @matched_user.budget %>/month</p>
            </div>
          <% end %>
          <% if @matched_user.sleep_schedule.present? %>
            <div>
              <div class="flex items-center gap-2 text-white/60 text-sm mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Sleep Schedule</span>
              </div>
              <p class="text-white"><%= @matched_user.sleep_schedule %></p>
            </div>
          <% end %>
          <% if @matched_user.pets.present? %>
            <div>
              <div class="flex items-center gap-2 text-white/60 text-sm mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
                <span>Pets</span>
              </div>
              <p class="text-white"><%= @matched_user.pets %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex gap-4 fade-in">
        <%= link_to "Back to Matches", matches_path, class: "btn-pop flex-1 text-center px-6 py-3 rounded-lg border border-white/10 text-white hover:bg-white/5" %>
        <%= button_to "Like", like_match_path(@match), method: :post, class: "btn-pop flex-1 px-6 py-3 rounded-lg bg-white text-black hover:bg-white/90 font-medium" %>
      </div>
    </div>
  </body>
</html>
