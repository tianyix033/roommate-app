
<div class="max-w-md mx-auto bg-white shadow p-6 rounded-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Log In</h1>
  <p id="notice" class="text-green-600 mb-2"><%= notice %></p>
  <p id="alert" class="text-red-600 mb-2"><%= alert || flash[:alert] %></p>
  <%= form_with url: auth_login_path, local: true, class: "space-y-4" do |form| %>
    <div class="flex flex-col">
      <%= form.label :email, "Email", class: "mb-1 font-semibold text-gray-700" %>
      <%= form.email_field :email, value: @submitted_email || params[:email], class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :password, "Password", class: "mb-1 font-semibold text-gray-700" %>
      <%= form.password_field :password, class: "px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= form.submit "Log In", class: "w-full px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition" %>
    </div>
  <% end %>

  <p class="mt-4 text-gray-700 text-center">
    Need an account? <%= link_to 'Sign up', auth_register_path, class: "text-blue-500 hover:underline" %>
  </p>
</div>
