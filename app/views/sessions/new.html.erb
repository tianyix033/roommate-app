<% content_for :title, "Sign In" %>
<% content_for :hide_header, true %>
<% content_for :hide_footer, true %>
<% content_for :main_class, "flex-1 flex items-center justify-center px-6 py-12" %>
<% content_for :content_class, "w-full max-w-5xl" %>

<div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
  
  <!-- Left Side - Branding -->
  <div class="opacity-0 animate-fadeIn space-y-8">
    <a href="<%= root_path %>" class="inline-block">
      <span class="text-5xl md:text-6xl font-bold tracking-tight">Room<span class="text-[#FFFC00]">Mate</span></span>
    </a>
    <p class="text-xl md:text-2xl text-gray-400 leading-loose max-w-md">
      Find your perfect roommate.
    </p>
    <p class="text-lg text-gray-500 leading-relaxed max-w-sm">
      Sign in to explore listings, manage your profile, and connect with others.
    </p>
  </div>

  <!-- Right Side - Form -->
  <div class="opacity-0 animate-fadeIn" style="animation-delay: 0.2s;">
    <div class="glass-card rounded-2xl p-8">
      <div class="mb-6">
        <h2 class="text-2xl font-bold mb-2">Welcome back</h2>
        <p class="text-gray-400 text-sm">Sign in to your account</p>
      </div>

      <%= form_with url: auth_login_path, local: true, class: "space-y-6" do |form| %>
  <div>
          <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.email_field :email, 
              value: params[:email],
              class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
              placeholder: "you@example.com" %>
  </div>

  <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.password_field :password,
              class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all duration-200",
              placeholder: "••••••••" %>
  </div>

  <div>
          <%= form.submit "Sign in", 
              class: "w-full px-6 py-4 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>

      <p class="mt-6 text-center text-gray-400 text-sm">
        Need an account? 
        <%= link_to 'Sign up', auth_register_path, class: "text-[#FFFC00] hover:text-yellow-300 font-medium transition-colors" %>
      </p>
    </div>
  </div>

</div>
