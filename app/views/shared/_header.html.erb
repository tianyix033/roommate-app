<%# 
  Shared header partial
  Options:
    - variant: :default (glass effect) or :solid (black background)
    - show_nav: true/false - whether to show navigation buttons
%>
<% variant ||= :default %>
<% show_nav = local_assigns.fetch(:show_nav, true) %>

<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl <%= variant == :solid ? 'bg-black' : '' %>" <%= variant == :default ? 'style="background-color: oklch(20.5% 0 0 / 0.8);"'.html_safe : '' %>>
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="<%= logged_in? ? listings_path : root_path %>" class="flex items-center">
      <span class="text-lg font-semibold tracking-tight transition-transform duration-200 hover:scale-110 inline-block">Room<span class="text-[#FFFC00]">Mate</span></span>
    </a>

    <% if show_nav %>
      <div class="flex items-center gap-3">
        <% if logged_in? %>
          <a href="<%= user_listings_path(current_user) %>" class="px-4 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200">
            My Listings
          </a>
          <a href="<%= matches_path %>" class="px-4 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200 inline-flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Matches
          </a>
          <a href="<%= conversations_path %>" class="px-4 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200 inline-flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Messages
          </a>
          <a href="<%= profile_path %>" class="px-4 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200">
            Profile
          </a>
          <%= button_to 'Logout', auth_logout_path, method: :post, 
              class: "px-4 py-2 text-sm font-medium rounded-full text-white hover:opacity-80 transition-opacity duration-200",
              style: "background-color: oklch(63.7% 0.237 25.331);" %>
        <% else %>
          <a href="<%= auth_register_path %>" class="hidden md:block px-5 py-2 text-sm font-medium rounded-full border border-white/20 text-white hover:bg-white/5 transition-colors duration-200">
            Sign Up
          </a>
          <a href="<%= auth_login_path %>" class="px-5 py-2 text-sm font-medium rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-200">
            Sign in
          </a>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>
