<%# Shared flash messages partial %>

<% if notice.present? %>
  <div id="flash-notice" class="mb-6 px-4 py-3 rounded-xl bg-green-500/10 border border-green-500/20 text-green-400 text-sm opacity-0 animate-fadeIn transition-opacity duration-500">
    <%= notice %>
  </div>
  <script>
    setTimeout(() => {
      const notice = document.getElementById('flash-notice');
      if (notice) {
        notice.style.opacity = '0';
        setTimeout(() => notice.remove(), 500);
      }
    }, 3000);
  </script>
<% end %>

<% if alert.present? || flash[:alert].present? %>
  <div class="mb-6 px-4 py-3 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 text-sm opacity-0 animate-fadeIn">
    <%= alert || flash[:alert] %>
  </div>
<% end %>

